<div class="menu-container">
    <fieldset class="menu-category">
        <legend>
            <h4>{{localize "PF2EBestiary.Menus.BestiaryIntegration.CreatureRegistration.Name"}}</h4>
        </legend>

        <div class="form-group">
            <label>{{localize "PF2EBestiary.Settings.NPCRegistation.Name"}}</label>
            <div class="form-fields">
                <div class="form-fields">
                    <select name="settings.npcRegistration">
                        {{selectOptions this.npcRegistrationOptions selected=this.settings.npcRegistration valueAttr="value" labelAttr="name" localize=true}}
                    </select>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label>{{localize "PF2EBestiary.Settings.AutomaticCombatRegistration.Name"}}</label>
            <div class="form-fields">
                <select name="settings.creatureRegistration.automaticCombatRegistration">
                    {{selectOptions this.combatRegistrationOptions selected=this.settings.creatureRegistration.automaticCombatRegistration valueAttr="value" labelAttr="name" localize=true}}
                </select>
            </div>
        </div>

        <div class="form-group">
            <label>{{localize "PF2EBestiary.Settings.DoubleClickOpen.Name"}}</label>
            <div class="form-fields">
                <div class="form-fields">
                    <input type="checkbox" name="settings.creatureRegistration.doubleClickOpen" {{checked this.settings.creatureRegistration.doubleClickOpen}} />
                </div>
            </div>
        </div>
    </fieldset>

    <div class="menu-grouper">
        <fieldset class="menu-category">
            <legend class="pf2e-bestiary-clickable-icon" data-action="toggleChatMessageHandlingFields">
