        <fieldset class="menu-category">
            <legend class="pf2e-bestiary-clickable-icon" data-action="toggleHiddenSettingsFields">
                <h4>{{localize "PF2EBestiary.Menus.BestiaryIntegration.HiddenSettings.Name"}}</h4>
            </legend>

            <div class="form-group">
                <label>{{localize "PF2EBestiary.Menus.BestiaryIntegration.HiddenSettings.Monster"}}</label>
