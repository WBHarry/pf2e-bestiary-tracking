<div>
    <div class="flexcol">
        <div class="form-group">
            <label>{{localize "PF2EBestiary.Bestiary.AvatarMenu.HideState"}}</label>
            <div class="form-fields">
                <div class="form-fields">
                    <select name="{{concat "system.imageState.hideState"}}">
                        {{selectOptions this.hideStates selected=this.update.system.imageState.hideState valueAttr="value" labelAttr="name" localize=true}}
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>{{localize "PF2EBestiary.Bestiary.AvatarMenu.HideImage"}}</label>
            <div class="form-fields">
                <div class="form-fields">
                    <input type="text" value="{{localize this.update.system.imageState.hideImage}}" disabled />
                    <button data-action="filePicker" data-path="system.imageState.hideImage" title="Browse Files"><i class="fas fa-file-import fa-fw"></i></button>
                    <button data-action="clearHideImage" {{#if (not this.update.system.imageState.hideImage)}}disabled{{/if}}><i class="fa-solid fa-circle-xmark"></i></button>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <button data-action="save">{{localize "PF2EBestiary.Bestiary.AvatarMenu.Save"}}</button>
    </footer>
</div>